#!/bin/bash


# ORIGENES SOPORTADOS
# Se admiten solamente repositorios de Rhodecode 
# (en lugar de la IP se podrían usar los nombres de los repositorios o un patrón que combine ambos)
declare -a SUPPORTED_ORIGINS=("10.1.140.41")


CLONE_DIR_ROOT="$HOME/.baustro"
CLONE_DIR_FULL="${CLONE_DIR_ROOT}/hooks"

# URL con la dirección del repositorio de hooks
CLONE_URL="https://github.com/fxaviergb/ba_hooks.git"


is_supported_origin() {
	ORIGIN=$(git config --get remote.origin.url)
	for supported in "${SUPPORTED_ORIGINS[@]}"
	do
		if [[ $ORIGIN == *"$supported"* ]]
		then
			return 0 #true in bash
		fi
	done
	return 1 #false in bash
}

do_update() {
	# TODO comprobar que la carpeta exista
	cd "$CLONE_DIR_FULL"
	git pull "$CLONE_URL"
	git config --global core.hooksPath "${CLONE_DIR_FULL}/git"
}


execute() {
	if is_supported_origin
	then
		echo "Actualizando estándares del Banco del Austro..."
		do_update
	fi
}


# FUNCION PRINCIPAL
execute
